<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="当前城市：北京"
            android:textColor="#ffffff"
            android:textSize="20.0dp"/>

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal"/>
        
        <ImageView
            android:layout_width="1.0dp"
            android:layout_height="40.0dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/title_back"
            android:background="#A71717" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_top">
        
        <com.example.daireker.miniweather.ClearEditText
            android:id="@+id/search_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="搜索全国城市（中文）"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/magnifying_glass"
            android:drawablePadding="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="8dp"
            android:maxLines="1"
            android:background="@drawable/contact_search_box_edittext_keyword_background"
            android:textColor="#ff000000"
            android:textColorHint="#ffcccccc"
            android:textSize="15dp"/>
        
        <ListView
            android:id="@+id/title_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_city"
            android:background="#ffffff">

        </ListView>

    </RelativeLayout>

</RelativeLayout>