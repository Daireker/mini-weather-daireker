<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="364dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/tx_day_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:lines="1"
                android:text="星期五"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

            <ImageView
                android:id="@+id/image_day_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:src="@drawable/biz_plugin_weather_xiaoyu"/>

            <TextView
                android:id="@+id/tx_day_4_temperature"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:lines="1"
                android:text="-4°C~4°C"
                android:textSize="22sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tx_day_4_climate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.125"
                android:gravity="center"
                android:lines="1"
                android:text="小雨"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tx_day_4_wind"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.125"
                android:gravity="center"
                android:lines="1"
                android:text="微风"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/tx_day_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:lines="1"
                android:text="星期六"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

            <ImageView
                android:id="@+id/image_day_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:src="@drawable/biz_plugin_weather_zhongyu"/>

            <TextView
                android:id="@+id/tx_day_5_temperature"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:lines="1"
                android:text="-5°C~3°C"
                android:textSize="22sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tx_day_5_climate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.125"
                android:gravity="center"
                android:lines="1"
                android:text="中雨"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tx_day_5_wind"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.125"
                android:gravity="center"
                android:lines="1"
                android:text="微风"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/tx_day_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:lines="1"
                android:text="星期天"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

            <ImageView
                android:id="@+id/image_day_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:src="@drawable/biz_plugin_weather_yin"/>

            <TextView
                android:id="@+id/tx_day_6_temperature"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:lines="1"
                android:text="-3°C~6°C"
                android:textSize="22sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tx_day_6_climate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.125"
                android:gravity="center"
                android:lines="1"
                android:text="阴"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tx_day_6_wind"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.125"
                android:gravity="center"
                android:lines="1"
                android:text="微风"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>